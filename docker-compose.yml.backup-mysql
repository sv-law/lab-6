version: "3.8"

name: lab-6

services:
  backend:
    container_name: lab-6-backend
    build: backend
    environment:
      - NODE_ENV=development
    volumes:
      - "./backend:/app"
    env_file:
      - ./env/mysql.env
    links:
      - db
  db:
    container_name: lab-6-db
    image: tutum/mysql:5.6
    environment:
      - ON_CREATE_DB=development_db
    env_file:
      - ./env/mysql.env
    volumes:
      - "db_data:/var/lib/mysql"
      
volumes:
    db_data:
      external: false
